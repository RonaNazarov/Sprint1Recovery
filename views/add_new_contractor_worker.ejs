    <!-- Title Page-->
    <title>Add a new contractor worker</title>

    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Main CSS-->
    <link href="public_add_new_contractor_worker/css/add_new_contractor.css" rel="stylesheet" media="all">
</head>
<header>
	<%- include('../partials/header_company_worker'); %>
</header>
<body>
    <div class="page-wrapper bg-dark p-t-100 p-b-50">
        <div class="wrapper wrapper--w900">
            <div class="card card-6">
                <div class="card-heading">
                    <h2 class="title">Add a new contractor</h2>
                </div>
                <div class="card-body">
                    <form id="add_form" method="POST">
                        <div class="form-row">
                            <div class="name">First name</div>
                            <div class="value">
                                <input class="input--style-6" type="text" name="first_name" required required pattern="[a-zA-Z]+">
                            </div>
                        </div>
						<div class="form-row">
                            <div class="name">Last name</div>
                            <div class="value">
                                <input class="input--style-6" type="text" name="last_name" required required pattern="[a-zA-Z]+">
                            </div>
                        </div>
						<div class="form-row">
                            <div class="name">Hourly Pay</div>
                            <div class="value">
                                <input class="input--style-6" type="text" name="hourly_pay" required required pattern="[0-9]+|[0-9]+[.][0-9]+">
                            </div>
                        </div>
						<div class="form-row">
							<div class="name">City</div>
                            <div class="value">
                                <input class="input--style-6" type="text" name="city" required>
                            </div>
                        </div>
						<div class="form-row">
							<div class="name">Home</div>
                            <div class="value">
                                <input class="input--style-6" type="text" name="home" required>
                        	</div>
						</div>
						<div class="form-row">
                            <div class="name">Phone Number</div>
                            <div class="value">
                                <input class="input--style-6" type="text" name="phone_number" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Email address</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="email" name="email" required required pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?">
                                </div>
                            </div>
                        </div>
						<div class="form-row">
                            <div class="name">Gender</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="radio" name="radio" checked>Male
									<input class="input--style-6" type="radio" name="radio">Female
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Skills</div>
                            <div class="value">
                                <div class="input-group">
                                    <textarea class="textarea--style-6" name="skills" required></textarea>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <button class="btn btn--radius-2 btn--blue-2" type="submit">Add</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Jquery JS-->
    <script src="public_add_new_contractor_worker/vendor/jquery/jquery.min.js"></script>

	
    <!-- Main JS-->
    <script src="public_add_new_contractor_worker/js/global.js"></script>

